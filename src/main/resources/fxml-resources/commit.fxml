<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="root" collapsible="false" maxHeight="300.0" maxWidth="600.0" prefHeight="300.0" prefWidth="600.0" text="Commit to branch..." xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CommitController">
   <content>
      <VBox maxHeight="300.0" maxWidth="600.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="600.0">
               <children>
                  <TextArea fx:id="textBox" blendMode="DARKEN" maxHeight="150.0" maxWidth="550.0" prefHeight="150.0" prefWidth="550.0" promptText="Add a commit message" text="Commit made with GHGUIâ„¢" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0">
                     <children>
                        <CheckBox fx:id="stagedOnlyCheck" mnemonicParsing="false" selected="true" text="Commit staged files only" />
                        <CheckBox fx:id="amendCheck" mnemonicParsing="false" text="Amend previous commit" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#confirmCommit" text="Commit" />
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</TitledPane>
