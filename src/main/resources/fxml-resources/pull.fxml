<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="root" animated="false" collapsible="false" prefHeight="131.0" prefWidth="442.0" text="Pull" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.bristol.controllers.PullController">
   <content>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Remote" />
                  <ComboBox fx:id="remote" onShowing="#populateRemotes" prefHeight="26.0" prefWidth="103.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Remote Branch" />
                  <ComboBox fx:id="remoteBranch" onShowing="#populateRemoteBranches" prefHeight="26.0" prefWidth="205.0" />
               </children>
            </HBox>
            <CheckBox fx:id="branchCheckBox" mnemonicParsing="false" selected="true" text="Pull to &quot;&lt;target&gt;&quot;" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label text="Target Branch" />
                  <ComboBox fx:id="targetBranch" onShowing="#populateTargetBranches" prefHeight="26.0" prefWidth="205.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#pull" prefHeight="29.0" prefWidth="67.0" text="Pull" />
                  <Button mnemonicParsing="false" onAction="#cancel" prefHeight="29.0" prefWidth="67.0" text="Cancel" />
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </content>
</TitledPane>
