<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" prefHeight="200.0" prefWidth="600.0" spacing="10.0" styleClass="tab-descendant-pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.bristol.controllers.PullController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <Label text="Remote" />
            <ComboBox fx:id="remote" onShowing="#populateRemotes" prefHeight="26.0" prefWidth="103.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <Label text="Remote Branch" />
            <ComboBox fx:id="remoteBranch" onShowing="#populateRemoteBranches" prefHeight="26.0" prefWidth="205.0" />
         </children>
      </HBox>
      <CheckBox fx:id="branchCheckBox" mnemonicParsing="false" selected="true" text="Pull to &quot;&lt;target&gt;&quot;" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <Label text="Target Branch" />
            <ComboBox fx:id="targetBranch" onShowing="#populateTargetBranches" prefHeight="26.0" prefWidth="205.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#pull" prefHeight="29.0" prefWidth="67.0" text="Pull" />
            <Button mnemonicParsing="false" onAction="#cancel" prefHeight="24.0" prefWidth="81.0" text="Cancel" />
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
