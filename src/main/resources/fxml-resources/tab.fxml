<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="600.0" minWidth="600.0" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.bristol.controllers.TabController">
   <bottom>
      <HBox fx:id="statusBarHBox" alignment="CENTER_LEFT" maxHeight="30.0" BorderPane.alignment="CENTER">
         <styleClass>
            <String fx:value="generic-background-pane" />
            <String fx:value="status-bar" />
         </styleClass>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#push" styleClass="main-title-box" text="Push">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#pull" text="Pull" />
            <Button mnemonicParsing="false" onMouseClicked="#commit" styleClass="main-title-box" text="Commit">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <opaqueInsets>
                  <Insets top="10.0" />
               </opaqueInsets>
            </Button>
            <Button mnemonicParsing="false" onAction="#refresh" text="Merge" />
            <Separator visible="false" HBox.hgrow="ALWAYS" />
            <Label text="HTTPS:">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="HttpsCredentials" onAction="#updateCredentials" onShowing="#populateCredentials" promptText="Select credentials:">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </ComboBox>
            <Label text="SSH:">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="SshCredentials" onAction="#updateCredentials" onShowing="#populateCredentials" promptText="Select credentials:" />
            <Button mnemonicParsing="false" onAction="#loginClick" text="+" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <styleClass>
            <String fx:value="generic-background-pane" />
            <String fx:value="tool-bar" />
         </styleClass>
      </HBox>
   </top>
   <left>
      <ScrollPane hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="230.0" BorderPane.alignment="CENTER">
         <content>
            <AnchorPane fx:id="informationPane" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="200.0" styleClass="generic-background-pane" />
         </content>
         <styleClass>
            <String fx:value="generic-background-pane" />
            <String fx:value="information-pane" />
         </styleClass>
      </ScrollPane>
   </left>
   <center>
      <SplitPane dividerPositions="0.7" orientation="VERTICAL" styleClass="middle-pane" BorderPane.alignment="CENTER">
         <items>
            <ScrollPane fx:id="treePane" styleClass="generic-background-pane" />
            <AnchorPane fx:id="terminalPane" styleClass="generic-background-pane" SplitPane.resizableWithParent="false" />
         </items>
      </SplitPane>
   </center>
   <right>
      <ScrollPane hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="230.0" BorderPane.alignment="CENTER">
         <styleClass>
            <String fx:value="generic-background-pane" />
            <String fx:value="information-pane" />
         </styleClass>
         <content>
            <AnchorPane fx:id="statusPane" maxWidth="250.0" minWidth="250.0" prefWidth="250.0">
               <styleClass>
                  <String fx:value="generic-background-pane" />
                  <String fx:value="status-pane" />
               </styleClass>
            </AnchorPane>
         </content>
      </ScrollPane>
   </right>
</BorderPane>
