<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="504.0" prefWidth="574.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.bristol.controllers.TabController">
   <children>
      <HBox alignment="CENTER" spacing="10.0" styleClass="tab-pane">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#push" styleClass="menuButton" text="Push" />
            <Button mnemonicParsing="false" onMouseClicked="#commit" styleClass="menuButton" text="Commit" />
            <Button mnemonicParsing="false" onMouseClicked="#checkout" styleClass="menuButton" text="Checkout" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
      <SplitPane dividerPositions="0.2, 0.8" VBox.vgrow="ALWAYS">
         <items>
            <AnchorPane fx:id="informationPane" styleClass="tab-pane" SplitPane.resizableWithParent="false" />
            <SplitPane dividerPositions="0.7" orientation="VERTICAL">
              <items>
                  <ScrollPane fx:id="treePane" />
                <AnchorPane fx:id="terminalPane" SplitPane.resizableWithParent="false" />
              </items>
            </SplitPane>
            <AnchorPane fx:id="statusPane" styleClass="tab-pane" SplitPane.resizableWithParent="false" />
         </items>
      </SplitPane>
      <HBox fx:id="statusBarHBox" alignment="CENTER" styleClass="tab-pane">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Status, info, etc.">
               <HBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
   </children>
</VBox>
